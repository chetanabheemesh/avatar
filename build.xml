<project name="Apps" default="war">
<target name="depoly" depends="war">
	<exec dir="." executable="bash">
		<arg line="deploy.sh"></arg>
	</exec>
</target>
<target name="war" depends="jar">
<mkdir dir="war"/>
	<war destfile="war/myapp.war" webxml="jar/myapp.jar"/>
</target>

<target name="jar" depends="compile">
<mkdir dir="jar"/>
         <jar basedir="classes" destfile="jar/myapp.jar" excludes="*.java"/>
</target>

<target name="compile">
<mkdir dir="classes"/>
<javac srcdir="src" destdir="classes"/>
</target>

<target name="clean">
<delete dir="classes"/>
<delete dir="jar"/>
<delete dir="war"/>
</target>
</project>




